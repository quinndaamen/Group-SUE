@{
    ViewData["Title"] = "Register";
}

<style>
    .register-container {
        min-height: 100vh;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
    }
    
    .register-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 20px 60px rgba(0,0,0,0.3);
        overflow: hidden;
        max-width: 1200px;
        width: 100%;
    }
    
    .register-row {
        display: flex;
        min-height: 700px;
    }
    
    .register-left {
        flex: 1.2;
        padding: 50px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
    
    .register-right {
        flex: 0.8;
        background: #f8f9fa;
        padding: 50px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
    
    .register-title {
        font-size: 32px;
        font-weight: 700;
        color: #0A0A0A;
        margin-bottom: 10px;
    }
    
    .register-subtitle {
        color: #717182;
        font-size: 16px;
        margin-bottom: 40px;
    }
    
    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
        margin-bottom: 20px;
    }
    
    .form-group {
        margin-bottom: 25px;
    }
    
    .form-label {
        display: block;
        margin-bottom: 8px;
        font-weight: 500;
        color: #0A0A0A;
        font-size: 14px;
    }
    
    .form-control {
        width: 100%;
        padding: 12px 16px;
        border: 2px solid #e8ebee;
        border-radius: 10px;
        font-size: 16px;
        transition: border-color 0.3s;
    }
    
    .form-control:focus {
        outline: none;
        border-color: #667eea;
    }
    
    .terms-checkbox {
        display: flex;
        align-items: flex-start;
        gap: 10px;
        margin: 25px 0;
    }
    
    .terms-checkbox input {
        margin-top: 4px;
    }
    
    .terms-text {
        font-size: 14px;
        color: #717182;
        line-height: 1.5;
    }
    
    .terms-text a {
        color: #667eea;
        text-decoration: none;
        font-weight: 500;
    }
    
    .terms-text a:hover {
        text-decoration: underline;
    }
    
    .register-btn {
        width: 100%;
        padding: 14px;
        background: #0A0A0A;
        color: white;
        border: none;
        border-radius: 10px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.3s;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }
    
    .register-btn:hover {
        background: #333;
    }
    
    .signin-link {
        text-align: center;
        margin-top: 25px;
        color: #717182;
        font-size: 14px;
    }
    
    .signin-link a {
        color: #667eea;
        text-decoration: none;
        font-weight: 500;
    }
    
    .benefits-title {
        font-size: 24px;
        font-weight: 600;
        color: #0A0A0A;
        margin-bottom: 30px;
    }
    
    .benefits-list {
        list-style: none;
        padding: 0;
    }
    
    .benefits-list li {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 20px;
        font-size: 16px;
        color: #0A0A0A;
    }
    
    .check-icon {
        color: #00C950;
        font-weight: bold;
        font-size: 18px;
    }
    
    .savings-badge {
        display: inline-block;
        background: #00C950;
        color: white;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: 600;
        margin-left: 5px;
    }
    
    .optional-label {
        font-size: 12px;
        color: #717182;
        font-style: italic;
        margin-left: 5px;
    }
    
    .brand-logo {
        font-size: 24px;
        font-weight: 700;
        color: #0A0A0A;
        margin-bottom: 40px;
    }
    
    @@media (max-width: 992px) {
        .register-row {
            flex-direction: column;
        }
        
        .register-left, .register-right {
            padding: 30px;
        }
        
        .form-row {
            grid-template-columns: 1fr;
            gap: 0;
        }
    }
</style>

<div class="register-container">
    <div class="register-card">
        <div class="register-row">
            <!-- Left Side - Registration Form -->
            <div class="register-left">
                <div class="brand-logo">S.U.E</div>
                
                <h1 class="register-title">Create Your Account</h1>
                <p class="register-subtitle">Join S.U.E to start managing your energy efficiently</p>
                
                <form>
                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">Full Name</label>
                            <input type="text" class="form-control" placeholder="Enter your full name" required>
                        </div>
                        
                        <div class="form-group">
                            <label class="form-label">Email Address</label>
                            <input type="email" class="form-control" placeholder="your.email@example.com" required>
                        </div>
                    </div>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">Mobile Number</label>
                            <input type="tel" class="form-control" placeholder="+31 6 12345678" required>
                        </div>
                        
                        <div class="form-group">
                            <label class="form-label">Post Code</label>
                            <input type="text" class="form-control" placeholder="1234 AB" required>
                        </div>
                    </div>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">Password</label>
                            <input type="password" class="form-control" placeholder="Create a strong password" required>
                        </div>
                        
                        <div class="form-group">
                            <label class="form-label">Confirm Password</label>
                            <input type="password" class="form-control" placeholder="Re-enter your password" required>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">
                            Telephone <span class="optional-label">(Optional)</span>
                        </label>
                        <input type="tel" class="form-control" placeholder="+31 20 1234567">
                    </div>
                    
                    <div class="terms-checkbox">
                        <input type="checkbox" id="terms" required>
                        <label for="terms" class="terms-text">
                            I agree to the <a href="#">Terms and Conditions</a> and <a href="#">Privacy Policy</a>
                        </label>
                    </div>
                    
                    <button type="submit" class="register-btn">
                        Create Account →
                    </button>
                    
                    <p class="signin-link">
                        Already have an account? <a href="#">Sign in</a>
                    </p>
                </form>
            </div>
            
            <!-- Right Side - Benefits -->
            <div class="register-right">
                <h2 class="benefits-title">Why Join S.U.E?</h2>
                
                <ul class="benefits-list">
                    <li>
                        <span class="check-icon">✓</span>
                        <span>Real-time energy price monitoring</span>
                    </li>
                    <li>
                        <span class="check-icon">✓</span>
                        <span>Smart usage recommendations</span>
                    </li>
                    <li>
                        <span class="check-icon">✓</span>
                        <span>
                            Save up to <span class="savings-badge">30%</span> on energy costs
                        </span>
                    </li>
                </ul>
                
                <div style="margin-top: 40px; font-size: 14px; color: #717182;">
                    <p><strong>Trusted by thousands</strong> of households across the Netherlands</p>
                    <p style="margin-top: 10px;">Secure, GDPR-compliant data handling</p>
                </div>
            </div>
        </div>
    </div>
</div>