@using Microsoft.AspNetCore.Identity
@using SUE.Data.Entities
@inject SignInManager<ApplicationUser> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - SUE.Presentation</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        /* Minimal modern tweaks */
        .navbar-brand {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-weight: 600;
        }
        .navbar-nav .nav-link {
            display: flex;
            align-items: center;
            gap: 0.3rem;
        }
        .btn-graph {
            display: flex;
            align-items: center;
            gap: 0.3rem;
        }
    </style>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <!-- Left side: home icon + title -->
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="bi bi-house-door-fill"></i>
                S.U.E
            </a>

            <!-- Right side buttons -->
            <div class="d-flex gap-2 align-items-center">
                <!-- Graph Buttons -->
                <a class="btn btn-outline-primary btn-graph" asp-area="" asp-controller="Graph" asp-action="ElectricityGraph">
                    <i class="bi bi-bar-chart-line-fill"></i> Electricity
                </a>
                <a class="btn btn-outline-primary btn-graph" asp-area="" asp-controller="Graph" asp-action="AirGraph">
                    <i class="bi bi-bar-chart-line-fill"></i> Air
                </a>

                <!-- Login / Logout -->
                @if (SignInManager.IsSignedIn(User))
                {
                    <form asp-controller="Auth" asp-action="Logout" method="post" class="m-0">
                        <button type="submit" class="btn btn-outline-danger btn-graph">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </button>
                    </form>
                }
                else
                {
                    <a class="btn btn-outline-success btn-graph" asp-area="" asp-controller="Auth" asp-action="Login">
                        <i class="bi bi-box-arrow-in-right"></i> Login
                    </a>
                }
            </div>
        </div>
    </nav>
</header>

<style>
    /* Buttons alignment tweaks */
    .btn-graph {
        display: flex;
        align-items: center;
        gap: 0.3rem;
        font-weight: 500;
    }

    .navbar-nav .nav-link, .btn-graph {
        font-size: 0.9rem;
    }

    form.m-0 {
        margin: 0;
    }
</style>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
