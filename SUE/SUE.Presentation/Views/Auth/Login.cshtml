@model LoginViewModel

@{
    ViewData["Title"] = "Login";
    
}

<style>
    .login-container {
        min-height: 100vh;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
    }
    
    .login-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 20px 60px rgba(0,0,0,0.3);
        overflow: hidden;
        max-width: 1000px;
        width: 100%;
    }
    
    .login-row {
        display: flex;
        min-height: 600px;
    }
    
    .login-left {
        flex: 1;
        padding: 50px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
    
    .login-right {
        flex: 1;
        background: #f8f9fa;
        padding: 50px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
    
    .welcome-title {
        font-size: 32px;
        font-weight: 700;
        color: #0A0A0A;
        margin-bottom: 10px;
    }
    
    .welcome-subtitle {
        color: #717182;
        font-size: 16px;
        margin-bottom: 40px;
    }
    
    .form-group {
        margin-bottom: 25px;
    }
    
    .form-label {
        display: block;
        margin-bottom: 8px;
        font-weight: 500;
        color: #0A0A0A;
        font-size: 14px;
    }
    
    .form-control {
        width: 100%;
        padding: 12px 16px;
        border: 2px solid #e8ebee;
        border-radius: 10px;
        font-size: 16px;
        transition: border-color 0.3s;
    }
    
    .form-control:focus {
        outline: none;
        border-color: #667eea;
    }
    
    .form-options {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }
    
    .remember-me {
        display: flex;
        align-items: center;
        gap: 8px;
    }
    
    .forgot-link {
        color: #667eea;
        text-decoration: none;
        font-size: 14px;
    }
    
    .forgot-link:hover {
        text-decoration: underline;
    }
    
    .login-btn {
        width: 100%;
        padding: 14px;
        background: #0A0A0A;
        color: white;
        border: none;
        border-radius: 10px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.3s;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }
    
    .login-btn:hover {
        background: #333;
    }
    
    .signup-link {
        text-align: center;
        margin-top: 25px;
        color: #717182;
        font-size: 14px;
    }
    
    .signup-link a {
        color: #667eea;
        text-decoration: none;
        font-weight: 500;
    }
    
    .help-title {
        font-size: 20px;
        font-weight: 600;
        color: #0A0A0A;
        margin-bottom: 30px;
    }
    
    .contact-info {
        margin-bottom: 25px;
    }
    
    .contact-label {
        font-size: 14px;
        color: #717182;
        margin-bottom: 5px;
    }
    
    .contact-value {
        font-size: 16px;
        color: #0A0A0A;
        font-weight: 500;
    }
    
    .office-location {
        background: white;
        padding: 20px;
        border-radius: 10px;
        margin-top: 20px;
    }
    
    .location-title {
        font-size: 16px;
        font-weight: 600;
        color: #0A0A0A;
        margin-bottom: 10px;
    }
    
    .location-address {
        color: #717182;
        font-size: 14px;
        line-height: 1.6;
    }
    
    .brand-logo {
        font-size: 24px;
        font-weight: 700;
        color: #0A0A0A;
        margin-bottom: 40px;
    }
    
    @@media (max-width: 768px) {
        .login-row {
            flex-direction: column;
        }
        
        .login-left, .login-right {
            padding: 30px;
        }
    }
</style>

<div class="login-container">
    <div class="login-card">
        <div class="login-row">
            <!-- Left Side - Login Form -->
            <div class="login-left">
                <div class="brand-logo">S.U.E</div>
                
                <h1 class="welcome-title">Welcome Back</h1>
                <p class="welcome-subtitle">Log in to access your energy dashboard</p>
                
                <form asp-action="Login">
                    <div class="form-group">
                        <label asp-for="Email" class="form-label">Email Address</label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="your.email@example.com" required>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" required>
                    </div>
                    
                    <div class="form-options">
                        <label asp-for="RememberMe" class="remember-me">
                            <input asp-for="RememberMe" type="checkbox">
                            <span>Remember me</span>
                        </label>
                        <a href="#" class="forgot-link">Forgot password?</a>
                    </div>
                    
                    <button type="submit" class="login-btn">
                        Log in →
                    </button>
                    
                    <p class="signup-link">
                        Don't have an account? <a asp-controller="Auth" asp-action="Register">Sign up</a>
                    </p>
                </form>
            </div>
            
            <!-- Right Side - Help & Contact -->
            <div class="login-right">
                <h2 class="help-title">Need Help?</h2>
                
                <div class="contact-info">
                    <div class="contact-label">Email</div>
                    <div class="contact-value">su.ethc@gmail.com</div>
                </div>
                
                <div class="contact-info">
                    <div class="contact-label">Phone</div>
                    <div class="contact-value">612374689</div>
                </div>
                
                <div class="office-location">
                    <div class="location-title">Office Location</div>
                    <div class="location-address">Rachesmolen R10</div>
                </div>
            </div>
        </div>
    </div>
</div>